---
export let collection: any;

export async function createCollection() {
  const allPosts = Astro.fetchContent('./schedule/*.md'); //Workaround for the bug
  const res = await fetch('https://www.learnwithjason.dev/api/schedule')
  const episodes = await res.json();

  return {
    routes: episodes.map((episode) => {
      const params = { slug: episode.slug.current };
      return params;
    }),
    permalink: ({params}) => `/schedule/${params.slug}/`,
    async data({params}) {
      return episodes.filter((episode) => episode.slug.current === params.slug);
    },
    pageSize: 10,
  }
}
